@using Microsoft.AspNetCore.Identity
@using OnlyCatsWebapp.Areas.Identity.Data;
@using OnlyCatsWebapp.Areas.Identity;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item pe-3">
            <a id="manage" class="nav-link btn-light btn text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"> 
                <button id="logout" type="submit" class="nav-link btn text-black btn-outline-light" >Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item pe-3">
            <a class="nav-link btn text-black btn-outline-light" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li class="nav-item">
         <a class="nav-link btn text-black btn-outline-light" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>

}
</ul>
