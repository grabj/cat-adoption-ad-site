@using Microsoft.AspNetCore.Identity
@using OnlyCatsWebapp.Areas.Identity.Data
@model OnlyCatsWebapp.Models.Cat
@inject UserManager<ApplicationUser> userManager

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
     @Html.HiddenFor(h => @Model.CatId)
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <div class="col col-md-6">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Age)
            </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateAdded)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateAdded)
        </dd>
        </div>

    </dl>
    <div class="col-md-6">

        <img src=@Model.ImageLocation class="float-right rounded p-2" alt="Cat profile photo" />


    </div>


    <div>
    @if(@Model.UserId == userManager.GetUserId(User)){
    <a asp-action="Edit" asp-route-id="@Model?.CatId">Edit</a>
    <a asp-action="Index">Back to List</a>;
    }
    else{
    <a asp-action="Index" asp-controller="Home">Back to List</a>;
    }

</div>
</div>
